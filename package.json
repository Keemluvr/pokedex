{
  "name": "pokedex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ENVIRONMENT=dev next dev --port 4001",
    "dev-win": "set ENVIRONMENT=dev && next dev --port 4001",
    "build": "next build && next export",
    "start": "next start",
    "format": "prettier --config .prettierrc --write \"**/**/**/*.{ts,tsx,js,json}\"",
    "lint": "eslint --config .eslintrc.js --fix",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-toastify": "^9.0.1",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@types/node": "17.0.33",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "8.15.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "*.*(ts|tsx)": "eslint --config .eslintrc.js --fix"
  }
}
